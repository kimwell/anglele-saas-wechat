page {
  background-color: #f8f8f8;
}

.order-detail-item {
  background-color: #fff;
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.order-detail-item-title {
  position: relative;
  font-size: 30rpx;
  color: #333;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}

.order-detail-item-title .status {
  float: right;
  font-size: 24rpx;
  color: #666;
}

.order-detail-item-title.border {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.order-detail-item-main {
  font-size: 30rpx;
  color: #666;
}

.order-info-cell {
  padding-bottom: 15rpx;
}

.order-info-cell label {
  float: right;
  font-size: 24rpx;
  color: #333;
}

.order-item {
  position: relative;
  padding: 15rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.order-item:last-child {
  border-bottom: 0;
}

.order-item-pic {
  position: absolute;
  left: 0;
  top: 15rpx;
}

.order-item-info {
  position: relative;
  padding-left: 180rpx;
  min-height: 160rpx;
}

.order-item-pic image {
  width: 160rpx;
  height: 160rpx;
}

.order-item-info {
  font-size: 24rpx;
  color: #333;
}

.order-item-price {
  margin: 20rpx 0;
}

.order-item-name {
  font-size: 30rpx;
  color: #666;
}

.order-item-total {
  padding: 20rpx 0;
  text-align: right;
  font-size: 24rpx;
  color: #666;
}
.order-item-total.real .red{
  color: #f00;
}

.order-item-total.real .amount{
  display: inline-block;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #666;
  text-decoration: line-through;

}
.order-item-total label {
  font-size: 30rpx;
  color: #333;
}

.order-item-cell .realData {
  color: #f00;
  font-size: 28rpx;
}

.order-item-cell label {
  display: inline-block;
  margin-right: 20rpx;
}

.order-item-info-real .data {
  font-size: 24rpx;
  color:#666;
  text-decoration: line-through;
}
.order-item-totalprice{
  position: absolute;
  right: 0;
  top: 60rpx;
}
.order-item-totalprice .amount{
  font-size: 18rpx;
  color: #333;
}

.order-item-totalprice.realamount .amount{
  text-decoration: line-through;
}
.order-item-totalprice .realAmount{
  font-size: 24rpx;
  color: #FF0000;
}